@page
@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2>User List</h2>
    
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <!-- Users will be loaded here -->
                </tbody>
            </table>
        </div>
    </div>
    
    <div id="alert" class="alert mt-3" style="display: none;"></div>
</div>

@section Scripts {
    <script>
        const apiBaseUrl = '@Configuration["ApiSettings:BaseUrl"]';
        
        async function loadUsers() {
            try {
                const response = await fetch(`${apiBaseUrl}/api/User`);
                if (!response.ok) {
                    throw new Error('Failed to fetch users');
                }
                
                const users = await response.json();
                const userTableBody = document.getElementById('userTableBody');
                
                userTableBody.innerHTML = users.map(user => `
                    <tr>
                        <td>${escapeHtml(user.fullName)}</td>
                        <td>${escapeHtml(user.email)}</td>
                        <td>${escapeHtml(user.role)}</td>
                        <td>
                            <a href="/Users/Details/${user.id}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="/Users/Edit/${user.id}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </td>
                    </tr>
                `).join('');
            } catch (error) {
                console.error('Error:', error);
                const alert = document.getElementById('alert');
                alert.className = 'alert alert-danger';
                alert.textContent = 'Failed to load users. Please try again later.';
                alert.style.display = 'block';
            }
        }

        // Helper function to escape HTML and prevent XSS
        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Load users when the page loads
        document.addEventListener('DOMContentLoaded', loadUsers);
    </script>
}
